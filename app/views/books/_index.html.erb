<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.category, books_path(category: book.category) %></td>
        <td class=<%= "favorite-" + book.id.to_s %> >
            <%= render "favorites/btn", book: book %>
        </td>
        <td><%= render "book_comments/counter", book: book %></td>
        <td class="movie-evaluation" data-score="<%= book.evaluation %>"></td>

      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--評価用のjqueryコード-->

<script>
// 一度空にしてから表示することでブラウザバックでのエラーが防げる
// ブラウザバックすると前のjqueryのアクションとブラウザバックしたあとのjqueryのアクションが重なる
  $('.movie-evaluation').empty();
  $('.movie-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>