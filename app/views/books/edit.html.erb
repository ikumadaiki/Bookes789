<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= render 'layouts/errors', obj: @book %>
  		<%= form_with model:@book, local:true do |f|  %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus:true,class:"form-control book_title", id:"book_title", placeholder:"Title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, autofocus:true,class:"form-control", id:"book_opinion", placeholder:"Opinion" %>
        </div>
            <div class="form-group">
          <label for="book_category">Category</label>
          <%= f.text_field :category, class:"form-control" %>
        </div>
        <div class="movie-evaluation my-3" data-score="<%= @book.evaluation %>"></div>
        <div class="form-group">
          <%= f.submit "Update Book",class:"btn btn-success" %>
        </div>
      <% end %>

  		<%= link_to 'Show', @book, class: "book_#{@book.id}" %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>

<script>
  $('.movie-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>